@baseurl = http://localhost:3000

// Get all tickets
GET {{baseurl}}/tickets

###

// Create a ticket
POST {{baseurl}}/tickets
Content-Type: application/json

{
  "ticket": {
    "client": "foo",
    "issue": "the test is not working",
    "status": "open",
    "deadline": "2023-02-15"
  }
}

###

// Update a single ticket
PUT {{baseurl}}/tickets/64a6e25936e620b3ef3d9be3
Content-Type: application/json

{
  "ticket": {
    "client": "foo",
    "issue": "the test was fixed",
    "status": "close",
    "deadline": "2023-02-15"
  }
}